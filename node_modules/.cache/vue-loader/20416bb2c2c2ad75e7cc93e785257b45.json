,"sourcesContent":["<template>\n  <div class=\"purchase\">\n    <a-row>\n      <a-col :span=\"5\">\n        <classification :category=\"category\" @purchaseListId=\"purchaseListId\"></classification>\n      </a-col>\n      <a-col :span=\"19\" class=\"purchase-right\">\n        <inputSearch :typeInput=\"typeInput\" @dataChange=\"dataChange\"></inputSearch>\n        <a-table\n          :columns=\"columns\"\n          :dataSource=\"data\"\n          @change=\"onChangePage\"\n          :pagination=\"pagination\"\n          :rowSelection=\"rowSelection\"\n          :loading=\"loading\"\n          :scroll=\"{ y: '70vh'}\"\n        >\n          <template\n            v-for=\"(col,index) in ['odOrderNumber','odSkuCode']\"\n            :slot=\"col\"\n            slot-scope=\"text,record\"\n          >\n            <a href=\"javascript:;\" :key=\"index\" @click=\"showDrawer(col,record)\">{{record[col]}}</a>\n          </template>\n          <!-- 状态 0.等待接单1.已接单 2.生产中 3.已完成 4.已取消 5已拒单 -->\n          <template slot=\"status\" slot-scope=\"text\">\n            <template v-if=\"text === 0 || text === 5\">\n              <a href=\"javascript:;\" class=\"step-dot\" :class=\"text === 0 ?'':'error'\"></a>\n              <a href=\"javascript:;\" class=\"step-dot\"></a>\n              <a href=\"javascript:;\" class=\"step-dot\"></a>\n            </template>\n            <template v-else>\n              <a href=\"javascript:;\" class=\"step-dot\" :class=\"text >= 1?'finish':''\"></a>\n              <a href=\"javascript:;\" class=\"step-dot\" :class=\"text >= 2?'finish':''\"></a>\n              <a href=\"javascript:;\" class=\"step-dot\" :class=\"text === 3?'finish':''\"></a>\n            </template>\n          </template>\n        </a-table>\n      </a-col>\n    </a-row>\n    <a-drawer\n      :destroyOnClose=\"true\"\n      placement=\"right\"\n      :closable=\"false\"\n      @close=\"closeDrawer\"\n      :visible=\"visible\"\n      :width=\"1040\"\n      :wrapStyle=\"{height: 'calc(100% - 108px)',overflow: 'auto',paddingBottom: '108px'}\"\n    >\n      <purchaseInfo @isDrawer=\"isDrawer\" :purchaseId=\"purchaseId\"/>\n    </a-drawer>\n  </div>\n</template>\n\n<script>\nimport { postJson } from '@/api/axios.js'\nimport api from '@/api/index.js'\nimport { columns } from './basic_lib/columns'\nimport { mixinBasic, mixinDrawer } from '@/components/tools/mixin/mixin'\nimport purchaseInfo from './child_info/purchaseInfo'\nimport classification from '@/components/list_classification/classification'\nimport inputSearch from '@/components/orderSearch/inputSearch'\nexport default {\n  mixins: [mixinBasic, mixinDrawer],\n  components: {\n    purchaseInfo,\n    classification,\n    inputSearch\n  },\n  data() {\n    return {\n      typeInput: 'distributors',\n      category: 'FACTORY',\n      columns,\n      data: [],\n      selectedRowKeys: [],\n      pagination: {\n        total: 0,\n        pageSize: 15,\n        defaultCurrent: 1,\n        showQuickJumper: true,\n        showSizeChanger: true,\n        pageSizeOptions: ['10', '15', '30', '50', '100']\n      },\n      factoryId: '',\n      purchasePostBean: {},\n      purchaseId: ''\n    }\n  },\n  created() {\n    this.getFactoryPrchase()\n  },\n  computed: {\n    rowSelection() {\n      const { selectedRowKeys } = this\n      return {\n        selectedRowKeys,\n        onChange: this.onChangeTab,\n        hideDefaultSelections: false\n      }\n    }\n  },\n  methods: {\n    onChangeTab(selectedRowKeys, selectedRows) {\n      this.selectedRowKeys = selectedRowKeys\n      this.selectedRows = selectedRows\n    },\n    // 翻页\n    onChangePage(pagination, filters, sorter) {\n      this.pagination.pageSize = pagination.pageSize\n      this.getFactoryPrchase(pagination.current)\n    },\n    // 选择工厂 查看采购列表\n    purchaseListId(id) {\n      this.factoryId = id\n      this.getFactoryPrchase()\n    },\n    // 查询工厂销售订单分页\n    getFactoryPrchase(currentPage = 1) {\n      this.loading = true\n      const data = this.purchasePostBean\n      data.factoryId = this.factoryId\n      data.currentPage = currentPage\n      data.pageSize = this.pagination.pageSize\n      postJson(api.getFactoryPrchase, data).then(res => {\n        if (res.data.code === 0) {\n          var data = res.data.data.records\n          data.forEach((item, index) => {\n            item['key'] = index\n          })\n          this.pagination.total = Number(res.data.data.total)\n          this.data = data\n        }\n        this.loading = false\n      })\n    },\n    // 打开抽屉\n    showDrawer(type, record) {\n      switch (type) {\n        case 'odOrderNumber':\n          this.visible = true\n          this.purchaseId = record.id\n          this.$store.commit('setPromptTitle', {\n            title: '采购详情',\n            isEdit: false\n          })\n          break\n      }\n    },\n    // 关闭抽屉\n    isDrawer(val) {\n      this.visible = val\n    },\n    // 按条件搜索采购列表\n    dataChange(val) {\n      this.purchasePostBean = { ...val }\n      this.getFactoryPrchase()\n    }\n  }\n}\n</script>\n\n<style lang='less' scoped>\n@import \"~styles/purchase.less\";\n</style>\n"]}]}